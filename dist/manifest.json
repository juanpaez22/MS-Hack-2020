{
    "manifest_version": 2,
    "name": "Enlighten: Mental Health Extension",
    "version": "1.0",
    "background": {
        "scripts": ["background.js", "alarm_utils.js", "storage_utils.js"],
        "persistent": false
    },
    "description": "Mental health extension.",
    "icons": {
        "16": "logo(16x16).png",
        "48": "logo(48x48).png",
        "128": "logo(128x128).png"
    },
    "browser_action": {
        "default_title": "Enlighten",
        "default_popup": "popup.html"
    },
    "content_security_policy":
        "script-src 'self' 'unsafe-eval'; object-src 'self'; img-src * data: 'self' 'unsafe-eval'",
    "offline_enabled": true,
    "permissions": [
        "storage",
        "notifications",
        "alarms"
    ]
}
